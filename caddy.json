{
  "admin": {
    "disabled": false,
    "listen": ":4000"
  },
  "apps": {
    "http": {
      "servers": {
        "": {
          "listen": [
            ":3000"
          ],
          "routes": [
            {
              "match": [
                {
                  "host": [
                    "portainer.rubeen"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "172.17.0.1:9443"
                    }
                  ],
                  "transport": {
                    "protocol": "http",
                    "tls": {
                      "insecure_skip_verify": true
                    }
                  }
                }
              ]
            },
            {
              "match": [
                {
                  "host": [
                    "money.rubeen"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "172.17.0.1:10001"
                    }
                  ]
                }
              ]
            },
            {
              "match": [
                {
                  "host": [
                    "import-money.rubeen"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "172.17.0.1:10002"
                    }
                  ]
                }
              ]
            }

          ]
        }
      }
    },
    "pki": {
      "certificate_authorities": {
        "Rubeen": {
          "name": "Rubeen Auth",
          "root_common_name": "Rubeen (root)",
          "intermediate_common_name": "Rubeen (intermediate)",
          "intermediate_lifetime": "10d",
          "install_trust": false,
          "root": {
            "certificate": "/etc/caddy/certs/root_cert.pem",
            "private_key": "/etc/caddy/certs/root_key.pem",
            "format": "pem_file"
          }
        }
      }
    },
    "tls": {
      "automation": {
        "policies": [
          {
            "subjects": [
              "*.rubeen",
              "rubeen"
            ],
            "issuers": [
              {
                "module": "internal",
                "ca": "Rubeen"
              }
            ],
            "on_demand": true
          }
        ]
      }
    }
  }
}