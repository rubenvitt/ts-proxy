{
  "admin": {
    "disabled": false,
    "listen": ":4000"
  },
  "apps": {
    "http": {
      "servers": {
        "": {
          "listen": [
            ":3000"
          ],
          "routes": [
            {
              "match": [
                {
                  "host": ["money.rubeen"]
                }
              ],
              "handle": [
                {
                  "handler": "static_response",
                  "body": "Hello, world!"
                }
              ]
            }
          ]
        }
      }
    },
    "pki": {
      "certificate_authorities": {
        "Rubeen": {
          "name": "Rubeen Auth",
          "root_common_name": "Rubeen (root)",
          "intermediate_common_name": "Rubeen (intermediate)",
          "intermediate_lifetime": "10d",
          "install_trust": false,
          "root": {
            "certificate": "/etc/caddy/certs/root_cert.pem",
            "private_key": "/etc/caddy/certs/root_key.pem",
            "format": "pem_file"
          }
        }
      }
    },
    "tls": {
      "automation": {
        "policies": [
          {
            "subjects": ["rubeen"],
            "issuers": [{
              "module": "internal",
              "ca": "Rubeen"
            }],
            "key_type": "ed25519",
            "on_demand": true
          }
        ]
      }
    }
  }
}